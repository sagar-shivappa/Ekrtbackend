{
    "version" : "1.0",
    "read_only_files" : [
        ".env",
        "/tests/App.test.js",
        ".gitignore",
        "configuration.json"

    ],
    "default_open_files": ["controllers/ekart.controller.js","/routes/ekart.route.js"],
    "scoring" : {
        "command" : "npm install && npm test",
        "files" : {
            "junit.xml" : "Backend API tests Nodejs"
        },
        "testcase_weights" : {
            "GET /products should return all gadgets if they exists" : 2,
            "GET /cart/:user_id should return 500 if error" : 3
        }
    },
    "buttons" : {
        "Install Packages" : {
            "command" : "npm install"
        },
        "Start API Server" : {
            "command" : "npm start",
            "dependencies" : ["npm install"]
        },
        "Run Test Cases" : {
            "command" :"npm test",
            "dependencies" : ["npm install"]
        },
        "Start MongoDB" : {
            "command" : "mongod --dbpath /var/lib/mongo --logpath /var/log/mongodb/mongod.log"
        }
    }

}
